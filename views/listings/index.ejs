<% layout("/layouts/boilerplate") %>
<style>
  .filters {
    display: flex;
    justify-items: center;
  }
  button {
    border: none;
    background-color: white;
    color: grey;
    font-size: small;
  }
  .icons {
    display: flex;
    justify-content: center;
  }
  .filter {
    margin-right: 2rem;
    margin-top: 1.5rem;
    color: grey;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .tax-toggle {
    border: 1px solid gray;
    border-radius: 1rem;
    height: 2.7rem;
    padding: 0.7rem;
    margin-left: 10rem;
    display: flex;
    align-items: center;
  }
  .tax-info {
    display: none;
  }
</style>
<div class="filters mb-3">
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-fire"></i></div>
      <button name="category" value="trending">Trending</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-person-hiking"></i></div>
      <button name="category" value="hiking">Hiking</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-mountain-city"></i></div>
      <button name="category" value="mountain-city">Mountain-city</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-ship"></i></div>
      <button name="category" value="island">Islands</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-igloo"></i></div>
      <button name="category" value="domes">Domes</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-mountain"></i></div>
      <button name="category" value="mountain">Mountains</button>
    </div>
  </form>
  <form action="/listings/filter" method="get">
    <div class="filter">
      <div class="icons"><i class="fa-solid fa-person-swimming"></i></div>
      <button name="category" value="pools">Pools</button>
    </div>
  </form>
  <div class="tax-toggle mt-3">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display Tax Breakdown</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %> </b><br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<script>
  let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
